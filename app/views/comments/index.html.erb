<h1>Önska produkter</h1>
<div class="makeawishform">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= render 'form', comment: @comment %>
		</div>
	</div>
</div>
<div class="makeawishtable">
	<table class="purchases">
		<thead>
			<tr>
				<th>Produkt</th>
				<th>Önskad av</th>
			</tr>
		</thead>

		<tbody>
			<% @comments.each do |c| %>
			<tr>
				<td><%= c.comment %></td>
				<% if (c.user != nil) then %>
					<td><%= c.user.name%></td>
				<% else %>
					<td> Användare borttagen </td>
				<% end %>
         		<td><%= link_to 'Ta bort', c, method: :delete, data: { confirm: 'Är du säker?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

