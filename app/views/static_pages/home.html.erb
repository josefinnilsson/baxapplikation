<div class="homepage">
  <% if !logged_in? %>
  <%= render "sessions/new" %>
  <% end %>
  <% if logged_in? %>
</div>
<section>
  <div class="row">
    <h2 class="left">Baxapp</h2>
  </div>
</section>
<section class="purchases">
  <div class="row">
    <h3>Strecka</h3>
    <p class="left">Tid sedan du streckade sist:
      <% if @last_purchase %>
      <i><%= time_ago_in_words(@last_purchase.created_at) %>.</i>
      <% else %>
      <i>Du har inte streckat.</i>
      <% end %>
    </p>
    <%= render 'purchases/form', purchase: @purchase %>
  </div>
</section>

<section>
  <div class="row">
    <h3>Dina streck</h3>
      <% if @last_purchase %>
      <h4>Antal</h4>
      <%= pie_chart @purchases_stats, legend: false, colors: Colors.generate(size: @count) %>
      <h4>Pengar</h4>
      <%= pie_chart @money_spent, legend: false, colors: Colors.generate(size: @count) %>
      <% else %>
      <i>Du har inte streckat.</i>
      <% end %>
  </div>
</section>

<section>
  <div class="row">
    <h3>Topplistan</h3>
    <table class="purchases">
  <thead>
    <tr>
      <th>Drifter</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
    <tr>
      <td><%= gravatar_for u, size: 250 %><%= link_to u.name, u %></td>
      <td><%= u.debt %> kr</td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
</section>
<% end %>


