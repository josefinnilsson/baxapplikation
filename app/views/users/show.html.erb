<section class="profile">
  <%= render @user %>
  <div class="admin">
    <% if current_user.admin? && !current_user?(@user) %>
    <%= button_to "Ta bort användare", @user, method: :delete, data: { confirm: "Är du säker?" } %>
    <% end %>

    <% if current_user.admin? && !current_user?(@user) %>
    <%= button_to "Gör till admin", make_user_admin_user_path, :method => :post %>
    <% end %>

    <% if current_user.admin? %>
      <%= button_to "Ta bort alla streck", delete_purchases_user_path, :method => :post %>
      <% end %>
    </div>
    <% if current_user?(@user) %>
    <h4><%= link_to 'Visa dina streck', purchases_user_path %></h4>
    <% end %>
    <% if current_user.admin? %>
    <h4> <%= link_to "Ändra", edit_user_path(@user) %> </h4>
    <% end %>
  </section>
