<div class="row">
  <h2 class="title">Gemensamma köp</h2>
</div>

<section>
  <div class="row">
    <%= button_to "Nytt köp", new_shared_purchase_path, method: :get, class: "btn btn-primary" %>
  </div>
</section>


<section>
  <div class="row">
    <h5>Alla gemensamma köp</h5>
    <table class="purchases">
      <thead>
        <tr>
          <th>Produkt</th>
          <th>Pris</th>
          <th>Pris per drifter</th>
        </tr>
      </thead>

      <tbody>
        <% @shared_purchases.each do |sp| %>
        <tr>
          <td><%= sp.name %></td>
          <td><%= sp.price %> kr</td>
          <td><%= (sp.price.to_f/9).ceil%> kr</td>
          <td><%= link_to 'Ta bort', sp, method: :delete, data: { confirm: 'Är du säker?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>