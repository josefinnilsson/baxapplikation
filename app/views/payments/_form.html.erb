<%= bootstrap_form_for(payment) do |f| %>
  <%= collection_select(:payment, :user_id, User.where('teams && ARRAY[?]::varchar[]', [SessionsController.helpers.current_team.id]).sort_by(&:name), :id, :name, {selected: current_user.id}) %>
  <%= f.label :summa %>
  <%= f.number_field :amount, class: 'form-control'%>
  <%= f.submit "Betala", class: "btn btn-primary" %>
<% end %>
